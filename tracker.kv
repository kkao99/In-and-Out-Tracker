<TrackerLayout>:

    Label:
        text: 'QHSLS Bathroom Pass'
        font_size: dp(40)

    # Label row
    GridLayout:
        cols: 4
        # size_hint: (None, None)
        row_default_height: dp(45)
        row_force_default: True
        Label:
            text: 'First Name'
            font_size: dp(22)
        Label:
            text: 'Last Name'
            font_size: dp(22)
        Label:
            text: 'Grade'
            font_size: dp(22)
        Label:
            text: 'Time'
            font_size: dp(22)

    ######################################################################
    # [START] input field - 1
    GridLayout:
        cols: 4
        row_default_height: dp(45)
        row_force_default: True

        # first name input field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            TextInput:
                id: first_name_1
                size_hint: (None, None)
                width: dp(160)
                height: dp(35)
                font_size: dp(20)
                text: ''
                multiline: False
                write_tab: False

        # last name input field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            TextInput:
                id: last_name_1
                size_hint: (None, None)
                width: dp(160)
                height: dp(35)
                font_size: dp(20)
                text: ''
                multiline: False
                write_tab: False

        # grade button field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                id: grade_btn_1
                size_hint: (None, None)
                width: dp(100)
                height: dp(35)
                font_size: dp(20)
                text: 'Grade'
                on_release: root._open_grade_dropdown(self, index=1)

        # check button field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                id: check_btn_1
                size_hint: (None, None)
                width: dp(140)
                height: dp(35)
                font_size: dp(20)
                text: 'Check in'
                on_release: root._update(index=1)

