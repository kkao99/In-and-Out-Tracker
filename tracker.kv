<TrackerLayout>:

    # Label row
    GridLayout:
        cols: 4
        # size_hint: (None, None)
        row_default_height: dp(45)
        row_force_default: True
        Label:
            text: 'First Name'
            font_size: dp(22)
        Label:
            text: 'Last Name'
            font_size: dp(22)
        Label:
            text: 'Grade'
            font_size: dp(22)
        Label:
            text: 'Time'
            font_size: dp(22)

    # [START] input field
    GridLayout:
        cols: 4
        row_default_height: dp(45)
        row_force_default: True

        # first name input field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            TextInput:
                id: first_name
                size_hint: (None, None)
                width: dp(160)
                height: dp(35)
                font_size: dp(20)
                text: ''
                multiline: False
                write_tab: False

        # last name input field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            TextInput:
                id: last_name
                size_hint: (None, None)
                width: dp(160)
                height: dp(35)
                font_size: dp(20)
                text: ''
                multiline: False
                write_tab: False

        # grade button field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                id: grade_btn
                size_hint: (None, None)
                width: dp(100)
                height: dp(35)
                font_size: dp(20)
                text: 'Grade'
                on_release: root._open_grade_dropdown(self)

        # check button field
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                id: check_btn
                size_hint: (None, None)
                width: dp(140)
                height: dp(35)
                font_size: dp(20)
                text: 'Check in'
                on_release: root._update()


<GradeDropdown>:
    id: grade_dropdown
    Button:
        size_hint_y: None
        height: dp(40)
        font_size: dp(18)
        text: '9'
        on_release: grade_dropdown.select('9')
    Button:
        size_hint_y: None
        height: dp(40)
        font_size: dp(18)
        text: '10'
        on_release: grade_dropdown.select('10')
    Button:
        size_hint_y: None
        height: dp(40)
        font_size: dp(18)
        text: '11'
        on_release: grade_dropdown.select('11')
    Button:
        size_hint_y: None
        height: dp(40)
        font_size: dp(18)
        text: '12'
        on_release: grade_dropdown.select('12')
